<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">
    <ImageView
        android:id="@+id/home_item1_name_image"
        android:scaleType="centerCrop"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/home_item1_date_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_above="@+id/home_item1_content_text"
        android:layout_toEndOf="@+id/home_item1_name_image"
        android:layout_toRightOf="@+id/home_item1_name_image" />

    <TextView
        android:id="@+id/home_item1_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignEnd="@+id/home_item1_date_text"
        android:layout_alignRight="@+id/home_item1_date_text"
        android:layout_below="@+id/home_item1_date_text"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/home_item1_content_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_alignLeft="@+id/home_item1_title_text"
        android:layout_alignStart="@+id/home_item1_title_text"
        android:layout_below="@+id/home_item1_name_image"
        android:layout_marginTop="33dp" />

</RelativeLayout>